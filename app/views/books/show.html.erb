<div class="container">
  <div class="row">
    <div class="col-3 mt-3 pb-2">
  <h2>User info</h2>
    <% if @book.user.profile_image.attached? %>
       <%= image_tag @book.user.profile_image, size: "100x100" %>
    <% else %>
       <%= image_tag 'nogi_image', size: "100x100" %>
    <% end %>
    <table class="table">
      <tr>
     <td>Name</td>
     <td><%= @book.user.name %></td>
      </tr>
      <tr>
     <td>Introduction</td>
     <td><%= @book.user.introduction %></td>
      </tr>
    </table>
    <% if @book.user == current_user %>
      <%= link_to edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>


  <%= render "books/form", book: @book_new %>
    </div>
    <div class="col-8 offset-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag 'nogi_image', size: "100x100" %>
            <% end %><br>
              <%= link_to @user.name, user_path(@book.user.id) %>
            </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "編集しまっせ", edit_book_path(@book.id), class: "btn btn-success" %></td>
              <td><%= link_to "消しまっせ", book_path(@book.id), method: :delete, "data-confirm" => "ほんまに消しますん？", class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

