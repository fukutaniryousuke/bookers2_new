<div class="container">
  <div class="row">
    <div class="col-3 mt-3 pb-2">
  <h2>Users info</h2>
  <%= render "profile", user: @user %>

  <%= render "books/form", book: @book %>
    </div>
    <div class="mt-3 col-8 offset-1">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
          <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
             <tr>
               <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'nogi_image', size: "100x100" %>
              <% end %>
               </td>
               <td><%= user.name %></td>
               <td><%= link_to "見るんか？", user_path(user.id), class: "btn btn-outline-info btn-block" %></td>
             </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
