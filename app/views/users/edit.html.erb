<div class="container">
  <div class="row">
    <div class="mx-auto">
     <h2>User Edit</h2>
     <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user, method: :patch do |f| %>
        <p>名前</p>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        <p class="mt-3">プロフィール画像</p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        <p class="mt-3">紹介文</p>
        <%= f.text_area :introduction %><br>
        <%= f.submit "変更しまっせ", class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>